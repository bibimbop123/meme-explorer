<h2>Search Results</h2>

<% if @results.empty? %>
  <p>No memes found for "<%= params[:q] %>" ðŸ˜¢</p>
<% else %>
  <ul>
    <% @results.each do |category, meme| %>
      <li>
        <a href="/category/<%= category %>/meme/<%= URI.encode_www_form_component(meme[:title]) %>">
          <%= meme[:title] %> (<%= category.capitalize %>)
