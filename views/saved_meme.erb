<% if @meme && @meme.is_a?(Hash) && @meme["title"] %>
<div class="saved-meme-container">
  <div class="meme-display-section">
    <div class="meme-display-card">
      <img
        id="meme-img"
        src="<%= @image_src || '/images/funny1.jpeg' %>"
        alt="<%= @meme["title"] || 'Meme Image' %>"
        class="meme-display-image"
        onerror="this.src='/images/funny1.jpeg'"
      >
    </div>
  </div>

  <div class="meme-info-section">
    <div class="meme-info-card">
      <h1 id="meme-title" class="meme-display-title">
        <%= @meme["title"] || "Untitled Meme" %>
      </h1>
      
      <div class="meme-meta-info">
        <span class="meme-subreddit-badge">r/<%= @meme["subreddit"] || "Unknown" %></span>
      </div>

      <div class="meme-stats">
        <div class="stat">
          <span class="stat-label">Likes</span>
          <span class="stat-value"><%= (@likes.to_i rescue 0) > 0 ? (@likes.to_i rescue 0) : "0" %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="meme-actions-section">
    <form class="action-form" action="/like" method="POST">
      <input type="hidden" name="url" value="<%= @image_src || '' %>">
      
      <button
        type="submit"
        class="action-button action-button-primary <%= 'liked' if session[:liked_memes]&.include?(@image_src) %>"
      >
        <span class="button-icon"><%= session[:liked_memes]&.include?(@image_src) ? "üíî" : "‚ù§Ô∏è" %></span>
        <span class="button-text"><%= session[:liked_memes]&.include?(@image_src) ? "Unlike" : "Like" %></span>
      </button>
    </form>

    <button
      type="button"
      onclick="unsaveMeme(<%= @saved_meme_id %>)"
      class="action-button action-button-danger"
    >
      <span class="button-icon">üóëÔ∏è</span>
      <span class="button-text">Remove</span>
    </button>

    <a href="/profile" class="action-button action-button-secondary">
      <span class="button-icon">‚¨ÖÔ∏è</span>
      <span class="button-text">Back</span>
    </a>
  </div>
</div>
<% else %>
<div class="saved-meme-container">
  <div class="not-found-state">
    <p class="not-found-icon">üòû</p>
    <p class="not-found-text">Meme not found...</p>
    <a href="/profile" class="back-link">Return to Profile</a>
  </div>
</div>
<% end %>

<script>
function unsaveMeme(savedId) {
  const url = document.querySelector("input[name='url']").value;
  
  fetch("/api/unsave-meme", {
    method: "POST",
    body: new URLSearchParams({ url: url }),
    headers: { "Accept": "application/json" }
  })
  .then(res => res.json())
  .then(data => {
    if (navigator.vibrate) navigator.vibrate([100, 50, 100]);
    window.location.href = "/profile";
  })
  .catch(err => {
    alert("Error: " + err);
    if (navigator.vibrate) navigator.vibrate(200);
  });
}
</script>

