<div class="meme-container">
  <h2><%= @meme["title"] %></h2>

  <!-- Unified image source -->
  <img src="<%= @image_src %>" alt="<%= @meme["title"] %>">

  <p>Category: <%= @category_name %></p>
  <p>Views: <%= @views %></p>

  <form id="like-form" action="/like" method="POST">
    <input type="hidden" name="url" value="<%= @image_src %>">
    <button type="submit" id="like-button" class="<%= 'liked' if session[:liked_memes]&.include?(@image_src) %>">
      ‚ù§Ô∏è <%= session[:liked_memes]&.include?(@image_src) ? 'Unlike' : 'Like' %>
    </button>
  </form>
</div>

<script>
  const form = document.getElementById('like-form');
  const button = document.getElementById('like-button');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    try {
      const res = await fetch(form.action, { 
        method: 'POST',
        body: new URLSearchParams(new FormData(form))
      });
      if (!res.ok) {
        const text = await res.text();
        console.error("Server error:", text);
        return;
      }

      const data = await res.json();

      if (data.liked) {
        button.textContent = 'üíî Unlike';
        button.classList.add('liked');
      } else {
        button.textContent = '‚ù§Ô∏è Like';
        button.classList.remove('liked');
      }
    } catch (err) {
      console.error("Fetch error:", err);
    }
  });
</script>

<style>
  .meme-container {
    text-align: center;
    margin: 20px;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  }

  button {
    background-color: #eee;
    border: none;
    padding: 8px 12px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 8px;
    transition: 0.2s;
    margin-top: 10px;
  }

  button.liked {
    background-color: #ff4d4d;
    color: white;
  }

  button:hover {
    opacity: 0.9;
  }
</style>
