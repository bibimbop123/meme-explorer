<div class="meme-container">
  <h2><%= @meme["title"] %></h2>

  <img src="<%= @meme['file'] %>" alt="<%= @meme['title'] %>">
  <p>Views: <%= @views %></p>


  <form id="like-form" action="/like" method="POST">
    <input type="hidden" name="url" value="<%= @meme["url"] %>">
    <button type="submit" id="like-button" class="<%= 'liked' if session[:liked_memes]&.include?(@meme["url"]) %>">
        ‚ù§Ô∏è <%= session[:liked_memes]&.include?(@meme["url"]) ? 'Unlike' : 'Like' %>
    </button>
  </form>

</div>

<script>
  const form = document.getElementById('like-form');
  const button = document.getElementById('like-button');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    try {
      const res = await fetch(form.action, { method: 'POST' });
      if (!res.ok) {
        const text = await res.text();
        console.error("Server error:", text);
        return;
      }

      const data = await res.json();

      if (data.liked) {
        button.textContent = 'üíî Unlike';
        button.classList.add('liked');
      } else {
        button.textContent = '‚ù§Ô∏è Like';
        button.classList.remove('liked');
      }
    } catch (err) {
      console.error("Fetch error:", err);
    }
  });
</script>


<style>
  button {
    background-color: #eee;
    border: none;
    padding: 8px 12px;
    font-size: 16px;
    cursor: pointer;
    border-radius: 8px;
    transition: 0.2s;
  }
  button.liked {
    background-color: #ff4d4d;
    color: white;
  }
  img {
    width: 450px;
    height: 550px;
  }
</style>
