<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Meme Explorer ğŸ˜</title>
  <link rel="icon" href="/images/favicon.png">
  <link rel="apple-touch-icon" href="/images/favicon.png">
  <link rel="manifest" href="/manifest.json">
  <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/meme_explorer.css">
  <script>
    // Initialize theme on page load
    const savedTheme = localStorage.getItem('theme');
    const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
    
    if (savedTheme === 'light') {
      document.documentElement.classList.remove('dark-mode');
    } else if (savedTheme === 'dark') {
      document.documentElement.classList.add('dark-mode');
    } else if (prefersDark) {
      document.documentElement.classList.add('dark-mode');
    }
  </script>
</head>
<body>
  <!-- ================= HEADER ================= -->
  <header>
    <h1><a href="/" class="logo">Meme Explorer ğŸ˜</a></h1>
    <nav>
      <button class="dark-mode-toggle" id="darkModeToggle" title="Toggle dark mode">ğŸŒ™</button>
      <a href="/category/funny">Funny</a>
      <a href="/category/wholesome">Wholesome</a>
      <a href="/category/dank">Dank</a>
      <a href="/category/selfcare">Self Care</a>
      <a href="/trending">Trending</a>
      <a href="/metrics">ğŸ“ˆ Metrics</a>
      <a href="/random">Random ğŸ²</a>
      <% if session[:user_id] %>
        <a href="/profile">ğŸ‘¤ Profile</a>
        <% if session[:reddit_username] == "brianhkim13@gmail.com" %>
          <a href="/admin" style="background: #ff6b00;">ğŸ”’ Admin</a>
        <% end %>
        <a href="/logout">ğŸšª Logout</a>
      <% else %>
        <a href="/login">Login</a>
        <a href="/signup">Sign Up</a>
      <% end %>
    </nav>
  </header>

  <!-- ================= MAIN CONTENT ================= -->
  <main>
    <%= yield %>
  </main>

  <!-- ================= FOOTER ================= -->
  <footer>
    <p>Built with Sinatra</p>
  </footer>

  <!-- ================= SESSION DATA ================= -->
  <script>
    window.sessionLikedMemes = <%= (session[:liked_memes] || []).to_json %>;
    
    // Dark mode toggle for entire UI
    const darkModeToggle = document.getElementById('darkModeToggle');
    if (darkModeToggle) {
      // Set initial button state
      const isDarkMode = document.documentElement.classList.contains('dark-mode');
      darkModeToggle.textContent = isDarkMode ? 'â˜€ï¸' : 'ğŸŒ™';
      
      // Toggle on click
      darkModeToggle.addEventListener('click', (e) => {
        e.preventDefault();
        const html = document.documentElement;
        const newIsDark = !html.classList.contains('dark-mode');
        
        html.classList.toggle('dark-mode');
        localStorage.setItem('theme', newIsDark ? 'dark' : 'light');
        darkModeToggle.textContent = newIsDark ? 'â˜€ï¸' : 'ğŸŒ™';
      });
    }
  </script>

  <!-- ================= NAVIGATION JS ================= -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const prevBtn = document.getElementById("prev-btn");
      const nextBtn = document.getElementById("next-btn");

      prevBtn?.addEventListener("click", () => {
        window.location.href = "/random";
      });
      nextBtn?.addEventListener("click", () => {
        window.location.href = "/random";
      });

      document.addEventListener("keydown", (e) => {
        if ((e.code === "Space" || e.key === " ") && document.activeElement.tagName !== "INPUT") {
          e.preventDefault();
          window.location.href = "/random";
        }
      });
    });
  </script>
</body>
</html>
