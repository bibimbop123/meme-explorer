<script>
  function checkPasswordStrength(password) {
    const strengthBar = document.getElementById('strength-bar');
    const strengthText = document.getElementById('strength-text');
    
    let strength = 0;
    let strengthLabel = '';
    let strengthColor = '#ddd';

    if (password.length >= 8) strength++;
    if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
    if (password.match(/[0-9]/)) strength++;
    if (password.match(/[^a-zA-Z0-9]/)) strength++;

    const widthPercent = (strength / 4) * 100;
    strengthBar.style.width = widthPercent + '%';

    if (strength === 0) {
      strengthLabel = '';
      strengthColor = '#ddd';
    } else if (strength === 1) {
      strengthLabel = 'Weak password';
      strengthColor = '#f44336';
    } else if (strength === 2) {
      strengthLabel = 'Fair password';
      strengthColor = '#ff9800';
    } else if (strength === 3) {
      strengthLabel = 'Good password';
      strengthColor = '#ffeb3b';
    } else {
      strengthLabel = 'Strong password ‚úì';
      strengthColor = '#4caf50';
    }

    strengthBar.style.backgroundColor = strengthColor;
    strengthText.textContent = strengthLabel;
    strengthText.style.color = strengthColor;
  }
</script>

