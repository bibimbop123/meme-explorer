          <label for="password" style="display: block; margin-bottom: 8px; font-weight: 600; color: #333; font-size: 14px;">Create Password</label>
          <input type="password" id="password" name="password" placeholder="At least 8 characters" required 
                 style="width: 100%; padding: 12px 14px; box-sizing: border-box; border: 2px solid #e0e0e0; border-radius: 8px; font-size: 14px; transition: border-color 0.2s;"
                 onfocus="this.style.borderColor='#667eea';"
                 onblur="this.style.borderColor='#e0e0e0';"
                 oninput="checkPasswordStrength(this.value);">
          <div id="password-strength" style="margin-top: 6px; height: 4px; background: #eee; border-radius: 2px; overflow: hidden;">
            <div id="strength-bar" style="height: 100%; width: 0%; background: #ddd; border-radius: 2px; transition: width 0.3s, background-color 0.3s;"></div>
