    <!-- Header with branding -->
    <div style="background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%); padding: 40px 30px; text-align: center; color: white;">
      <h1 style="margin: 0 0 10px; font-size: 32px; font-weight: 700;">üé™ Meme Explorer</h1>
      <p style="margin: 0; font-size: 14px; opacity: 0.95;">Join the meme community</p>
    </div>

    <!-- Content -->
    <div style="padding: 40px 30px;">
      
      <!-- Value Proposition -->
      <div style="margin-bottom: 30px; text-align: center;">
        <p style="color: #666; font-size: 14px; line-height: 1.6;">
