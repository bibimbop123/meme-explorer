<% if @api_memes.any? %>
  <div style="display:flex; flex-wrap:wrap; gap:1rem;">
    <% @api_memes.each do |meme| %>
      <div style="width:250px; text-align:center;">
        <a href="<%= meme["postLink"] %>" target="_blank">
          <img src="<%= meme["url"] %>" alt="<%= meme["title"] %>" width="250">
        </a>
        <p><%= meme["title"] %></p>
        <small>/r/<%= meme["subreddit"] %></small>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No memes loaded ðŸ˜¢</p>
<% end %>
